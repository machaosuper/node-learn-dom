extends ../layout

block content
	.container
		.row
			.col-md-7
				//- embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="application/x-shockwave-flash")
				iframe(src="#{movie.flash}", width="720", height="600")
				.panel.panel-default
					.panel-heading
						h3 评论区
					.panel-body
						ul.media-list
							li.media
								.pull-left
									img.media-object(src="http://fdfs.xylbn.cn/group1/M00/05/5B/wKgthlohHhKAfJNqAAFEfNYdd58244.png", style="width: 64px; height: 64px;")
								.media-body
									h4.media-heading mac
									p reall nice
								hr
							li.media
								.pull-left
									img.media-object(src="http://fdfs.xylbn.cn/group1/M00/05/5B/wKgthlohHhKAfJNqAAFEfNYdd58244.png", style="width: 64px; height: 64px;")
								.media-body
									h4.media-heading mac
									p reall nice
								hr
							form(method="POST", action="/movie/comment")
								input(type="hidden", name="comment[movie]", value="#{movie._id}")
								input(type="hidden", name="comment[form]", value="#{user._id}")
								.form-group
									textarea.form-control(name="comment[content]", row="3")
								button.btn.btn-primary(type="sunmit") 提交
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd= movie.title
					dt 导演
					dd= movie.doctor
					dt 国家
					dd= movie.county
					dt 语言
					dd= movie.language
					dt 上映年份
					dd= movie.year
					dt 简介
					dd= movie.summary
